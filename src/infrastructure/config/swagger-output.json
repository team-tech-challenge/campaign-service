            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddCampaignCustomer"
              }
            }
          }
        }
      }
    },
    "/campaign/update/{id}": {
      "put": {
        "tags": [
          "Campaign"
        ],
        "description": "Update campaign by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
