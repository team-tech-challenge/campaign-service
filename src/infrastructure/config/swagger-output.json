          },
          "campaignRule": {
            "type": "string",
            "example": "Campaign Rule"
          },
          "discount": {
            "type": "string",
            "example": "10"
          },
          "endDate": {
            "type": "string",
            "example": "2021-10-20"
          }
        },
        "xml": {
          "name": "Campaign"
        }
      },      
      "AddCampaignCustomer": {
        "type": "object",
        "properties": {
          "campaignId": {
            "type": "number",
            "example": 1
          },
          "customerId": {
            "type": "number",
            "example": 1
          }
        },
        "xml": {
          "name": "AddCampaignCustomer"
        }
